@model LCCS_School_Parent_Communication_System.Models.Announcement
@{
    ViewBag.Title = "viewAnnouncementDetails";
}


<style>
    .title-button {
        border-top: 4px solid #00008b;
        border-radius: 5px 5px 0px 0px;
    }
</style>




<div class="container mt-5 bg-white border-top border-bottom border-4 border-white rounded-3r">
    <div class="row title-button">
        <span class="p-2 title col-md-10">Details</span>
    </div>
    
    <div class="row p-4">
        <div class="col-md-4">
            <div class="row">
                <table class="table">
                    <tr class="rowx row">
                        <td><h3>Title</h3></td>
                        <td>@Model.announcementTitle</td>
                    </tr>
                    <tr class="rowx row">
                        <td><h3>Announcement Type</h3></td>
                        <td>@Model.announcementType</td>
                    </tr>
                    <tr class="rowx row">
                        <td><h3>Date Posted</h3></td>
                        <td>@Model.postDate.ToShortDateString()</td>
                    </tr>
                    <tr class="rowx row">
                        <td><h3>Content</h3></td>
                        <td>@Model.announcementContent</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-md-7 ml-md-3">
            @{
                var base1 = Convert.ToBase64String(Model.announcementDocument);
                var src = string.Format("data:application/pdf;base64,{0}", base1);
                <iframe src="@src" class="w-100 h-100"></iframe>
            }
        </div>
    </div>
</div>
