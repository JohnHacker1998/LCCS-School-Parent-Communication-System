@model LCCS_School_Parent_Communication_System.viewModels.RegistrarManagementViewModel
@{
    ViewBag.Title = "manageRegistrar";
}



@using (Html.BeginForm("manageRegistrar", "ADHome", new { area = "Academic_Director" }, FormMethod.Post))
{

    <div class="row">
        <div class="form-group col-xl-6">
            @Html.LabelFor(a => a.fullName)
            @Html.EditorFor(a => a.fullName, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group col-xl-6">
            @Html.LabelFor(a => a.email)
            @Html.EditorFor(a => a.email, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class=" text-center">
        <input type="submit" value="Register" name="register" class="btn btn-primary" />
    </div>
  
}
<div class="alert alert-danger" role="alert">
    @ViewBag.Message
    @Html.ValidationSummary()
</div>


<table class="table table-striped">
    <tr>
        <th scope="col">Username</th>
        <th scope="col">Full Name</th>
        <th scope="col">Email</th>
    </tr>

    @foreach (var usr in Model.registrarList)
    {
        <tr>
            <td>@usr.UserName</td>
            <td>@usr.fullName</td>
            <td>@usr.Email</td>
            <td>
                @using (Html.BeginForm("manageRegistrar", "ADHome", new { theID = usr.Id }, FormMethod.Post))
                {
                    <input type="submit" value="Delete" name="delete" class="btn btn-danger" />

                }
            </td>
        </tr>
    }



</table>
