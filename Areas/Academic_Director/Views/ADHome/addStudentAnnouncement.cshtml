@model LCCS_School_Parent_Communication_System.viewModels.registerAnnouncementViewModel
@{
    ViewBag.Title = "addStudentAnnouncement";
}

<h2>addStudentAnnouncement</h2>


<style>
    .container {
        width: 65%;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            minDate: new Date(),


        });
        

    });

</script>


<div class="container">
    @using (Html.BeginForm("addStudentAnnouncement", "ADHome", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(ax => ax.studentId)
        <div class="row mt-3">
            <div class="col-lg-4">
                @Html.LabelFor(a => a.studentName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-lg-8">
                <div class="row"> @Html.EditorFor(a => a.studentName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })</div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-4">
                @Html.LabelFor(a => a.announcementTitle, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-lg-8">
                <div class="row"> @Html.EditorFor(a => a.announcementTitle, new { htmlAttributes = new { @class = "form-control" } })</div>
                <div class="row">@Html.ValidationMessageFor(a => a.announcementTitle, null, new { @class = "text-danger" })</div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-4">
                @Html.LabelFor(a => a.announcementContent, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-lg-8">
                <div class="row"> @Html.TextAreaFor(a => a.announcementContent, new { htmlAttributes = new { @class = "form-control" } })</div>
                <div class="row">@Html.ValidationMessageFor(a => a.announcementContent, null, new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-lg-4 ">
                @Html.LabelFor(a => a.endDate)
            </div>
            <div class="col-lg-8">
                <div class="row"> @Html.EditorFor(a => a.endDate, new { htmlAttributes = new { @class = "datepicker form-control" } })</div>
                <div class="row">@Html.ValidationMessageFor(a => a.endDate, null, new { @class = "text-danger" })</div>
            </div>

        </div>
        <div class="row mt-3">
            <div class="col-lg-4 ">
                @Html.LabelFor(a => a.announcementDocument)
            </div>
            <div class="col-lg-8">
                <div class="row">
                    <input type="file" name="file" class="form-control" id="theFile" required />
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12"> <div class="row py-2"><input type="submit" name="add" value="ADD" class="btn btn-primary" id="sulu" /></div></div>
        </div>

        <input type="text" name="fileName" id="filName" style="display:none" />


    }
    @if (ViewBag.existsMessage != " " && ViewBag.existsMessage != null)
    {
        <div class="alert alert-danger">

            @ViewBag.existsMessage
        </div>
    }

    @if (ViewBag.incorrectFileFormat != " " && ViewBag.incorrectFileFormat != null)
    {
        <div class="alert alert-danger">

            @ViewBag.incorrectFileFormat
        </div>
    }
    @* @if (ViewBag.successfulMessage != " " && ViewBag.successfulMessage != null)
        {
            <div class="alert alert-success">
                @ViewBag.successfulMessage
            </div>
        }
    *@


</div>
<script>
    $(document).ready(function () {

         $('input[type="file"]').change(function (e) {
            var file = e.target.files[0].name;
            console.log(file);
            $('#filName').val(file);
        });
    });

</script>