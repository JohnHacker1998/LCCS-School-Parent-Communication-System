        {
            <div class="alert alert-success">
                @ViewBag.successfulMessage
            </div>
        }
        @if (ViewBag.MessageStatus != " " && ViewBag.MessageStatus != null)
        {
            <div class="alert alert-danger">
                @ViewBag.MessageStatus
            </div>
        }*@
</div>

<h1>Announcement List</h1>
<div class="container-fluid mb-3 mt-3">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <table class="table table-striped table-bordered" id="tblAbsenceRecord">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Announcement Type</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Post Date</th>
                            <th>End Date</th>
                            <th>FileName</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var k in Model.announcementList)
                        {
                            <tr>
                                <td>@k.announcementID</td>
                                <td>@k.announcementType</td>
                                <td>@k.announcementTitle</td>
                                <td>@k.announcementContent</td>
                                <td>@k.postDate.ToShortDateString()</td>
                                <td>@k.endDate.ToShortDateString()</td>
                                <td>@k.filName</td>
                                <td>
                                    <div class="side">
                                        @using (Html.BeginForm("updateAnnouncement", "ADHome", new { annId = k.announcementID.ToString() }, FormMethod.Get))
                                        {

                                            <input type="submit" name="update" value="Update Announcement" class="btn btn-primary" />
                                            <input type="text" name="txtUpdateAnnouncement" value=@k.announcementID style="display:none">
                                        }
                                    </div>
                                    <div class="side">
                                        @using (Html.BeginForm("announcementManagement", "ADHome", new { annId = k.announcementID.ToString() }, FormMethod.Post))
                                        {

                                            <input type="submit" name="delete" value="Delete" class="btn btn-danger" />

                                        }
                                    </div>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @if (ViewBag.SuccessfulMessage != " " && ViewBag.SuccessfulMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessfulMessage
        </div>
    }
    @*
        @if (ViewBag.MessageStatus != " " && ViewBag.MessageStatus != null)
        {
            <div class="alert alert-danger">
                @ViewBag.MessageStatus
            </div>
        }*@
</div>