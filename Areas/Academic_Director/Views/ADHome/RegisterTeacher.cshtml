@model LCCS_School_Parent_Communication_System.viewModels.RegisterTeacherViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterTeacher</title>
</head>
<body>

    @using (Html.BeginForm("RegisterTeacher", "ADHome", FormMethod.Post))
    {
        @Html.LabelFor(lbl => lbl.email)
        @Html.EditorFor(tb => tb.email, new { placeholder = "example@gmail.com", disabled=@ViewBag.disableEmail , @class = "form-control" })
        @Html.ValidationMessageFor(vm => vm.email)
        <br />
        @Html.LabelFor(lbl => lbl.fullName)
        @Html.EditorFor(tb => tb.fullName, new { @class = "form-control" })
        @Html.ValidationMessageFor(vm => vm.fullName)
        <br />
        @Html.LabelFor(lbl => lbl.grade)
        @Html.EditorFor(tb => tb.grade, new { htmlAttributes = new{ type = "number", @min = 9, @max = 12, step = 1 }, @class = "form-control" })
        @Html.ValidationMessageFor(vm => vm.grade)
        <br />
        @Html.LabelFor(lbl => lbl.subject)
        @Html.EditorFor(tb => tb.subject, new { @class = "form-control" })
        @Html.ValidationMessageFor(vm => vm.subject)
        <br />
        <hr />
        @Html.ValidationSummary(true, "please fix the errors to procced to the next step")
        @ViewBag.registerStatus
        @ViewBag.updateStatus
        <hr />
        <input type="submit" name="register" value="Register" />
        <input type="submit" name="search" value="Search" />
        <input type="submit" name="update" value="Update" />
    }


    @if (ViewBag.search == true)
    {
        <table>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Grade</th>
                <th>Subject</th>
                <th></th>
            </tr>
            @foreach (var list in Model.teacherList)
            {
                <tr>
                    <td>@list.user.fullName</td>
                    <td>@list.user.Email</td>
                    <td>@list.grade</td>
                    <td>@list.subject</td>
                    <td>
                        @using (Html.BeginForm("RegisterTeacher", "ADHome", new { id = @list.teacherId }, FormMethod.Post))
                        {
                            <input type="submit" value="Edit" name="edit" />
                            <input type="submit" value="Delete" name="delete" />
                        }

                    </td>
                </tr>
            }
        </table>
    }
</body>
</html>
