@model LCCS_School_Parent_Communication_System.viewModels.RegisterTeacherViewModel



<script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>

<script type="text/javascript">

    $(document).ready(function () {
        var view = $('#myModal');
        $('[data-toggle="modal"]').click(function () {
            var url = $(this).data('url');
            $.get(url).done(function (data) {
                view.html(data);
                view.modal({ backdrop: 'static', keyboard: false })
                view.modal('show');
            });
        });

        $('[data-toggle="modalsession"]').click(function () {
            var url = $(this).data('url')+'?id='+$(this).data('id');
            $.get(url).done(function (data) {
                view.html(data);
                view.modal({ backdrop: 'static', keyboard: false })
                view.modal('show');
            });
        });

        view.on('click', '[data-save="modal"]', function (event) {

            var form = $(this).parents('.modal').find('form');
            var actionUrl = form.attr('action');
            var sendData = form.serialize();
            $.validator.unobtrusive.parse("#error");
            ValidationForm();
            if (ValidationForm()) {
                $.post(actionUrl, sendData).done(function (data) {
                    //view.modal('hide');
                    view.html(data);
                    view.modal({ backdrop: 'static', keyboard: false })
                    view.modal('show');
                });
            }

        });

        view.on('click', '[data-dismiss="modal"]', function (event) {
            view.modal('hide');
        });

        view.on('hide.bs.modal', function () {
            location.reload();
        });
        function ValidationForm() {
            if (!$("#error").valid()) {
                return false;
            }
            else {
                return true;
            }
        }
    });

</script>

    
<div class="container">
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Grade</th>
                <th scope="col">Subject</th>
                <th scope="col" class="text-center"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#registerTeacherModal" data-url="@Url.Action("Register")"><i class="fas fa-plus fa-lg"></i></button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model.teacherList)
            {
                <tr>
                    <td>@list.user.fullName</td>
                    <td>@list.user.Email</td>
                    <td>@list.grade</td>
                    <td>@list.subject</td>
                    <td class="text-center">

                        <button type="button" class="btn btn-info" data-toggle="modalsession" data-target="#updateTeacherModal" data-url="@Url.Action("EditTeacher")" data-id="@list.teacherId"><i class="fas fa-edit fa-lg text-white"></i></button>
                        <button type="button" class="btn btn-danger" data-toggle="modalsession" data-target="#deleteTeacherModal" data-url="@Url.Action("DeleteTeacher")" data-id="@list.teacherId"><i class="fas fa-trash-alt fa-lg"></i></button>
                        
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>

    </table>
</div>

<div class="modal" id="myModal" role="dialog" data-backdrop="static" tabindex="-1" data-url="@Url.Action("Register")" ></div>

<style>
  .row{
      padding:0 !important;
  }
</style>
