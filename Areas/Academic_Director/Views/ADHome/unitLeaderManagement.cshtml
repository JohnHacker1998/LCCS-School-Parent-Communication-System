@model LCCS_School_Parent_Communication_System.viewModels.RegisterTeacherViewModel
@{
    ViewBag.Title = "unitLeaderManagement";
}
<script>
    $(document).ready(function () {
        $('#tblTeacherList').DataTable();
        $('#tblUnitLeaderList').DataTable();
    });
</script>
<div class="container mt-5 bg-light border-top border-bottom border-4 rounded-3">
    <h1 class="border-bottom border-5 p-3 mb-4">Potential Candidates</h1>
    <div class="container mb-3 mt-3">
        <table class="table table-striped table-bordered" id="tblTeacherList">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Grade</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.retrevedTeacherList)
                {
                    <tr>
                        <td>@k.user.fullName</td>
                        <td>@k.subject</td>
                        <td>@k.grade</td>
                        <td>
                            @using (Html.BeginForm("unitLeaderManagement", "ADHome", new { teacherID = @k.teacherId }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Assign" name="assign" class="btn btn-primary bg-green" />
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    </div>


<div class="container mt-5 bg-light border-top border-bottom border-4 rounded-3">
    <h1 class="border-bottom border-5 p-3 mb-4">Unit Leaders List</h1>
    <div class="container mb-3 mt-3">
        <table class="table table-striped table-bordered" id="tblUnitLeaderList">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.teacherList)
                {
                    <tr>
                        <td>@k.user.fullName</td>
                        <td>@k.subject</td>
                        <td>@k.grade</td>
                        <td>
                            @using (Html.BeginForm("unitLeaderManagement", "ADHome", new { teacherID = @k.teacherId }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Delete" name="delete" class="btn btn-danger" />
                            }
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
    </div>
    @if (ViewBag.Message != " " && ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">

            @ViewBag.Message

        </div>

    }
