@model LCCS_School_Parent_Communication_System.viewModels.StudentViewModel
@{

}


    @using (Html.BeginForm("StudentManagement", "RHome", FormMethod.Post))
    {

        @Html.HiddenFor(tb => tb.Id)
    <div class="row">
        <div class="form-group col-xl-6 ">
            @Html.LabelFor(lbl => lbl.fullName)
            @Html.EditorFor(tb => tb.fullName, new { htmlAttributes = new { @class = "form-control" } })
           
        </div>

        @if (ViewBag.edit)
        {
            <div class="form-group col-xl-6 ">
                @Html.LabelFor(lbl => lbl.sectionName)
                <select id="sectionName" name="sectionName" class="form-control">
                    @foreach (var i in Model.sectionName)
                    {
                        if (i == ViewBag.section)
                        {
                            <option value=@i selected>@i</option>
                        }
                        else
                        {
                            <option value=@i>@i</option>
                        }
                    }
                </select>
            </div>

        }



        else
        {

            <div class="form-group col-xl-6 ">

                @Html.LabelFor(lbl => lbl.sectionName)
                @Html.DropDownListFor(tb => tb.sectionName, new SelectList(Model.sectionName),new { htmlAttributes = new{ @class = "form-control " } })
               
                </div>

                }
            </div>

    <div class="alert alert-danger" role="alert">
        @ViewBag.found
        @ViewBag.upMessage
        @ViewBag.duplicate
        @Html.ValidationSummary()

       </div>


        <div class="text-center">
            <input type="submit" name="register" value="Register" class="btn btn-primary bg-green" />
            <input type="submit" name="search" value="Search" class="btn btn-primary " />
            <input type="submit" name="update" value="Update" class="btn btn-danger" @ViewBag.update />
        </div>
        }


        @if (ViewBag.search == true)
        {
            <table class="table table-striped">
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Section</th>
                    <th scope="col">Academic Year</th>
                    <th scope="col"></th>
                </tr>
                @foreach (var list in Model.student)
                {
                    <tr>
                        <td>@list.fullName</td>
                        <td>@list.sectionName</td>
                        <td>@list.academicYearId</td>
                        <td>
                            @using (Html.BeginForm("StudentManagement", "RHome", new { id = @list.studentId }, FormMethod.Post))
                            {
                                <input type="submit" value="Edit" name="edit" class="btn btn-primary" />
                                <input type="submit" value="Delete" name="delete" class="btn btn-danger" />
                            }

                        </td>
                    </tr>
                }
            </table>
        }
