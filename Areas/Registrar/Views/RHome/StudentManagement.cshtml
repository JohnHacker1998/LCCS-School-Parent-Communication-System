@model LCCS_School_Parent_Communication_System.viewModels.StudentViewModel
@{

}

<script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
</script>

<script type="text/javascript">

    $(document).ready(function () {
        var view = $('#myModal');
        $('[data-toggle="modal"]').click(function () {
            var url = $(this).data('url');
            $.get(url).done(function (data) {
                view.html(data);
                view.modal({ backdrop: 'static', keyboard: false })
                view.modal('show');
            });
        });

        $('[data-toggle="modalsession"]').click(function () {
            var url = $(this).data('url')+'?id='+$(this).data('id');
            $.get(url).done(function (data) {
                view.html(data);
                view.modal({ backdrop: 'static', keyboard: false })
                view.modal('show');
            });
        });

        view.on('click', '[data-save="modal"]', function (event) {

            var form = $(this).parents('.modal').find('form');
            var actionUrl = form.attr('action');
            var sendData = form.serialize();
            $.validator.unobtrusive.parse("#error");
            ValidationForm();
            if (ValidationForm()) {
                $.post(actionUrl, sendData).done(function (data) {
                    //view.modal('hide');
                    view.html(data);
                    view.modal({ backdrop: 'static', keyboard: false })
                    view.modal('show');
                });
            }

        });

        view.on('click', '[data-dismiss="modal"]', function (event) {
            view.modal('hide');
        });

        view.on('hide.bs.modal', function () {
            location.reload();
        });
        function ValidationForm() {
            if (!$("#error").valid()) {
                return false;
            }
            else {
                return true;
            }
        }
    });

</script>

<div class="container bg-light border-top border-bottom border-4 rounded-3">
    <h1 class="border-bottom border-5 p-3 mb-4">Students</h1>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th scope="col">Student Name</th>
                <th scope="col">Section</th>
                <th scope="col">Academic Year</th>
                <th scope="col" class="text-center"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addSectionModal" data-url="@Url.Action("RegisterStudent")"><i class="fas fa-plus fa-lg"></i></button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model.student)
            {
                <tr>
                    <td>@list.fullName</td>
                    <td>@list.sectionName</td>
                    <td>@list.academicYearId</td>
                    <td class="text-center">

                        <button type="button" class="btn btn-info" data-toggle="modalsession" data-target="#updateSectionModal" data-url="@Url.Action("EditStudent")" data-id="@list.studentId"><i class="fas fa-edit fa-lg text-white"></i></button>
                        <button type="button" class="btn btn-danger" data-toggle="modalsession" data-target="#deleteSectionModal" data-url="@Url.Action("DeleteStudent")" data-id="@list.studentId"><i class="fas fa-trash-alt fa-lg"></i></button>

                    </td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>

    </table>
</div>

<div class="modal" id="myModal" role="dialog" data-backdrop="static" tabindex="-1" data-url="@Url.Action("Register")"></div>

<style>
    .row {
        padding: 0 !important;
    }
</style>
