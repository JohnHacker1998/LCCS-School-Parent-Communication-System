@model LCCS_School_Parent_Communication_System.viewModels.StudentViewModel

<html>
<body>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-red">
                <h4 class="modal-title text-white" id="title">Update Student</h4>
                <button type="button" class="close btn" data-dismiss="modal">
                    <span aria-hidden="true" class="text-white">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                @if (ViewBag.complete != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.complete
                    </div>
                }
                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.error
                    </div>
                }

                <form action="EditStudent" id="error" autocomplete="off">

                    @Html.HiddenFor(h=>h.Id)

                    <div class="form-group">
                        @Html.LabelFor(l => l.fullName, new { @class = "form-label mt-2" })
                        <div class="container row">@Html.EditorFor(e => e.fullName, new { @class = "form-control" })</div>
                        <div class="container row">@Html.ValidationMessageFor(v => v.fullName, null, new { @class = "text-danger" })</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(lbl => lbl.sectionName, new { @class = "form-label mt-2" })
                        <div class="container row"><select id="sectionName" name="sectionName" class="form-control">
                            @foreach (var i in Model.sectionName)
                            {
                                if (i == ViewBag.section)
                                {
                                    <option value="@i" selected>@i</option>
                                }
                                else
                                {
                                    <option value="@i">@i</option>
                                }
                            }
                        </select></div>
                        <div class="container row">@Html.ValidationMessageFor(v => v.sectionName, "", new { @class = "text-danger" })</div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="save" data-save="modal">Update</button>
            </div>
        </div>
    </div>

</body>
</html>
<style>
    .row, .row > * {
        padding: 0 !important;
        margin-right: 0 !important;
        margin-left: 0 !important;
    }
</style>


