        view.on('click', '[data-save="modal"]', function (event) {

            var form = $(this).parents('.modal').find('form');
            var actionUrl = form.attr('action');
            var sendData = form.serialize();
            $.validator.unobtrusive.parse("#error");
            ValidationForm();
            if (ValidationForm()) {
                $.post(actionUrl, sendData).done(function (data) {
                    //view.modal('hide');
                    view.html(data);
                    view.modal('show');
                });
            }

        });

        view.on('click', '[data-dismiss="modal"]', function (event) {
            view.modal('hide');
        });
        view.on('hide.bs.modal', function () {            location.reload();        });


        function ValidationForm() {
            if (!$("#error").valid()) {
                return false;
            }
            else {
                return true;
            }
        }
    });

</script>


<h1>Student List</h1>
<div class="container mb-3 mt-3">
    <table class="table table-striped table-bordered" id="tblStudentList">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Full Name</th>
                <th scope="col">Section</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var k in Model.studentList)
            {
                <tr>
                    <td>@k.studentId</td>
                    <td>@k.fullName</td>
                    <td>@k.sectionName</td>
                    <td>

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#parentViewModel" data-url="@Url.Action("registerParent")" data-sid="@k.studentId.ToString()">Register Parent </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

