@model List<LCCS_School_Parent_Communication_System.Models.Evidence>
@{

}

<div class="container mt-5 bg-white border-bottom border-white border-4 rounded-3">
    <div class="row title-button">
        <span class="p-2 title col-md-10">Evidences</span>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="list-group container">

            
                @foreach (var list in Model)
                {
                    <div class="btn-group w-100 shadow mt-1 mb-2 ">
                        <a href="/Teacher/THome/EvidenceApproval/@list.evidenceId" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@list.parent.student.fullName</h5>
                                <small>@list.parent.student.sectionName</small>
                            </div>
                            <p class="mb-1">Uploaded By: @list.parent.user.fullName</p>
                            <small>Tel: @list.parent.user.PhoneNumber</small>




                        </a>
                    </div>
                }
            

        </div>
    }
    else
    {
        <div class="row py-2" style="color:gray"><h5 style="text-align:center">There are No Evidences to review</h5></div>
    }
</div>

<style>
    .title-button {
        border-top: 4px solid #40b09a;
        border-radius: 5px 5px 0px 0px;
    }
</style>

