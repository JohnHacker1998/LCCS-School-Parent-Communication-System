@model LCCS_School_Parent_Communication_System.viewModels.assignmentViewModel
@{
    ViewBag.Title = "assignmentManagement";
}


<div class="modal" id="myModal" role="dialog" data-backdrop="static" tabindex="-1"></div>
<script>
    $(document).ready(function () {
        $('#tblAssignmentList').DataTable();
        $('#tblCompletedGroupList').DataTable();
    });
</script>
<style>
    .side {
        display: inline-block;
    }
</style>

<div class="container mb-3 mt-3 bg-light border-top border-bottom-0 border-4 rounded-3 ">
    <h1 class="border-bottom border-5 p-3 mb-4">Group Structure List</h1>
    <table class="table table-striped table-bordered" id="tblCompletedGroupList">
        <thead>
            <tr>
               
                <th scope="col">Academic Quarter</th>
                <th scope="col">Group Structure Name</th>
                <th scope="col">Section Name</th>
                <th scope="col">Min Number of Members</th>
                <th scope="col">Max Number of Members</th>


                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in Model.gsList)
            {

                <tr>
                   
                    <td>@k.academicQuarter</td>
                    <td>@k.groupStructureName</td>
                    <td>@k.section.sectionName</td>
                    <td>@k.minNumberOfMembers</td>

                    <td>@k.maxNumberOfMembers</td>
                    <td>
                        @using (Html.BeginForm("addGroupAssignment", "THome", new { gsId = k.groupStructureId.ToString() }, FormMethod.Get))
                        {

                            <input type="submit" name="add" value="Add Group Assignment" class="btn btn-primary" />
                            <input type="text" name="txtAdd" value=@k.groupStructureId.ToString() style="display:none" />
                        }

                    </td>
                </tr>


            }
        </tbody>
    </table>


</div>

    <div class="container mb-3 mt-5 bg-light border-top border-bottom-0 border-4 rounded-3">
        <h1 class="border-bottom border-5 p-3 mb-4">Assignments List</h1>
        <table class="table table-striped table-bordered" id="tblAssignmentList">
            <thead>
                <tr>
                   
                    <th scope="col">Section</th>
                    <th scope="col">Assignment Type</th>

                    <th scope="col">Submission Date</th>

                    <th scope="col">Assignment Name</th>
                    <th scope="col">Mark Percentage</th>
                    <th scope="col">Assignment Document</th>

                    <th scope="col">
                        @using (Html.BeginForm("addAssignment", "THome", FormMethod.Get))
                        {
                            <input type="submit" name="add" value="Add Individual Assignment" class="btn btn-primary" />
                        }
                    </th>
                </tr>
            </thead>

            @foreach (var k in Model.listAssignment)
            {
                <tbody>
                    <tr>
                  
                        <td>@k.section.sectionName</td>
                        <td>@k.assignmentType</td>
                        <td>@k.submissionDate.ToShortDateString()</td>

                        <td>@k.assignmentName</td>
                        <td>@k.markPercentage</td>
                        <td>@k.fileName</td>

                        <td>
                            <div class="side">
                                @using (Html.BeginForm("updateAssignment", "THome", new { assId = k.assignmentId.ToString() }, FormMethod.Get))
                                {
                                    <input type="submit" name="update" value="Update" class="btn btn-primary" />
                                    <input type="text" name="txtAssignmentID" value=@k.assignmentId style="display:none" />
                                }

                            </div>
                            <div class="side">
                                @using (Html.BeginForm("assignmentManagement", "THome", new { assId = k.assignmentId.ToString() }, FormMethod.Post))
                                {

                                    @Html.AntiForgeryToken()
                                    <input type="submit" name="delete" value="Delete" class="btn btn-danger" />



                                }
                            </div>


                        </td>
                    </tr>
                </tbody>

            }

        </table>


    </div>


