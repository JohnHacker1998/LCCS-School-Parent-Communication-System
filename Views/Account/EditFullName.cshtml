@model LCCS_School_Parent_Communication_System.viewModels.ProfileEditFullName

<html>
<head>
</head>
<body>


    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="title">Change Password</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="EditFullName">
                    <div class="form-group">
                        @Html.LabelFor(l => l.fullName)
                        @Html.EditorFor(e => e.fullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(v => v.fullName)
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Change</button>
            </div>
        </div>
    </div>


</body>
</html>

